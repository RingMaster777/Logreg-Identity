@using LogReg_Identity.Models.ViewModel
@model IEnumerable<MenuModel>

@{
    ViewData["Title"] = "Menu List";
}

<div class="shadow p-3 my-5 bg-white rounded d-flex justify-content-between">
    <h1>@ViewData["Title"]</h1>

    <div class="mt-2">
        <a class="btn btn-success" style="width:150px" asp-controller="Menu" asp-action="Create">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
            </svg>
            Add Menu
        </a>
    </div>
</div>

<div>
    <table class="table table-bordered table-striped" style="width=100%">
        <thead>
            <tr>
                <th>
                    Menu Id
                </th>
                <th>
                    Menu Title
                </th>
                <th>
                    Parent
                </th>
            </tr>
        </thead>

        <tbody>

            @if (Model != null && Model.Any())
            {
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.MenuId
                        </td>
                        <td>
                            @obj.MenuName
                        </td>
                        <td class="text-center">
                           @obj.MenuParentId
                        </td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="4">
                        <div>
                            No Menus Available
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}