@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    //Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="container col-md-6">

    <div class="shadow p-3 mt-5 mb-3 bg-white rounded d-flex align-items-center justify-content-center">
        <h1>Log in</h1>
    </div>
    <div class="border p-3">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" id="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="pt-3">
                    <input type="checkbox" onclick="togglePassword('password')"> Show Password
                </div>
            </div>
            <div class="checkbox mb-2">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <div class="form-group my-5 px-3 d-flex justify-content-between">
                <button id="login-submit" type="submit" class="btn btn-primary" style="width:150px">Log in</button>
                <input type="reset" value="Reset" class="btn btn-dark bg-primary" />
            </div>
            @*
            <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
            <button  type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            *@


        </form>


        <div class="py-3 d-flex align-items-center justify-content-center">
            <span>Don't have an account! Please <a asp-area="Identity" asp-page="/Account/Register">Register</a></span>
        </div>
    </div>



</div>



<script>
    function togglePassword(id) {
        var x = document.getElementById(id);
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
